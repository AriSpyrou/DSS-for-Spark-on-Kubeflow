{
    "apiVersion": "sparkoperator.k8s.io/v1beta2",
    "kind": "SparkApplication",
    "metadata": {
      "generateName": "adult-preprocess-",
      "namespace": "spark-operator"
    },
    "spec": {
      "type": "Python",
      "pythonVersion": "3",
      "mode": "cluster",
      "image": "arisspyrou/thesis-repo",
      "imagePullPolicy": "Always",
      "mainApplicationFile": "hdfs:///python/preprocess.py",
      "sparkVersion": "3.1.1",
      "hadoopConf": {
        "fs.default.name": "hdfs://aspyrou-1:9000"
      },
      "restartPolicy": {
        "type": "OnFailure",
        "onFailureRetries": 3,
        "onFailureRetryInterval": 10,
        "onSubmissionFailureRetries": 5,
        "onSubmissionFailureRetryInterval": 20
      },
      "driver": {
        "cores": 1,
        "coreLimit": "1200m",
        "memory": "512m",
        "labels": {
          "version": "3.1.1"
        },
        "serviceAccount": "spark-spark"
      },
      "executor": {
        "cores": 1,
        "instances": 1,
        "memory": "512m",
        "labels": {
          "version": "3.1.1"
        }
      }
    }
  }